<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_main_color">

    <LinearLayout
        android:layout_marginTop="@dimen/margin_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbl_hello_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_title"
            android:textColor="@color/text_Conversion_color"
            android:textSize="@dimen/text25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginLeft="@dimen/margin_05"
            android:id="@+id/txt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_title"
            android:textColor="@color/text_Conversion_color"
            android:textSize="@dimen/text25sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/margin_40"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_select_currencies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_currencies"
            android:textColor="@color/text_black_color"
            android:textSize="@dimen/text18sp" />

        <ImageView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:src="@mipmap/line"/>

    </LinearLayout>

</LinearLayout>